{
	"name": "@langx/website",
	"version": "0.2.9",
	"homepage": "https://langx.io",
	"description": "LangX | Practice, Learn, Succeed! Free and Open Sourced Language Exchange Project",
	"author": {
		"name": "LangX",
		"email": "hi@langx.io"
	},
	"keywords": [
		"language, website, practice, svelte, edtech, cryptocurrency, exchange, token, languagelearning, language-exchange, learn2earn, languageexchange, languagexchange, learntoearn"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/langx/website.git"
	},
	"bugs": {
		"url": "https://github.com/langx/website/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "vitest",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"optimize-images": "image-transmutation --run --sourceFolder './build/images' --targetFolder './build/images' --inputFormats 'jpg' --inputFormats 'jpeg' --inputFormats 'png' --outputFormats 'png' --outputFormats 'webp' --outputFormats 'avif'",
		"postbuild": "npm run optimize-images && svelte-sitemap --domain https://langx.io/"
	},
	"devDependencies": {
		"@neoconfetti/svelte": "^1.0.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.20.4",
		"@types/cookie": "^0.5.1",
		"@types/dateformat": "^5.0.1",
		"@types/prismjs": "^1.26.2",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"dateformat": "^5.0.3",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"image-transmutation": "^0.1.3",
		"mdsvex": "^0.11.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"reading-time": "^1.2.0",
		"rehype-autolink-headings": "^7.0.0",
		"rehype-external-links": "^3.0.0",
		"rehype-slug": "^6.0.0",
		"sass": "^1.69.4",
		"striptags": "^3.2.0",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"svelte-sitemap": "^2.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.5.3",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/comfortaa": "^5.0.17",
		"sweetalert2": "^11.10.8"
	}
}
